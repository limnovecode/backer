-# app/views/layouts/application.html.haml

!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "initial-scale=1.0, width=device-width", name: "viewport" }
    %title Backer
    %meta{ content: "Promoting and Funding Campaigns.", name: "description" }
    %meta{ content: "Promoting, Funding, Campaigns", name: "tags" }
    %meta{ content: "Lim9 (info[@]lim9.com)", name: "author" }
    = favicon_link_tag "favicon.png", rel: "icon", type: "image/png"
    = favicon_link_tag "favicon.ico", type: "image/vnd.microsoft.icon"
    = stylesheet_link_tag "publicboard/application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "publicboard/application", "data-turbolinks-track" => true, async: true
    = csrf_meta_tags
    :css
      html{background-color:#0d0d0e;}
      body{color:#0d0d0e;background-color:#f2f3f3;font-family:Helvetica,Arial,Sans-serif;font-size:18px;}
      body .universal{width:100%}
      body .universal .placeholder{margin:0 auto}
      body .universal .placeholder .wrap{display:block;float:left;width:inherit;margin:0 auto}

  %body

    -# start: Yield
    = yield
    -# end: Yield

    -# start: Social Footer
    = render partial: "publicboard/partials/socialFooter"
    -# end: Social Footer

    -# start: Footer
    = render partial: "publicboard/partials/footer"
    -# end: Footer
