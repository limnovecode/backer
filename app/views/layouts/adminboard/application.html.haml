-# app/views/layouts/application.html.haml

!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "initial-scale=1.0, width=device-width", name: "viewport" }
    %title Backer - Adminboard
    %meta{ content: "Lim9 (info[@]lim9.com)", name: "author" }
    = favicon_link_tag "favicon.png", rel: "icon", type: "image/png"
    = favicon_link_tag "favicon.ico", type: "image/vnd.microsoft.icon"
    = stylesheet_link_tag "adminboard/application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "adminboard/application", "data-turbolinks-track" => true, async: true
    = csrf_meta_tags
    :css
      html{background-color:#0d0d0e;}
      body{color:#0d0d0e;background-color:#f2f3f3;font-family:Helvetica,Arial,Sans-serif;font-size:18px;}
      body .universal{width:100%}
      body .universal .placeholder{margin:0 auto}
      body .universal .placeholder .wrap{display:block;float:left;width:inherit;margin:0 auto}

  %body
    .universal.notifications
      .placeholder
        .wrap
          .row12Left
            - if flash[:success]
              %p= flash[:success]
            - else
              %p= flash[:failure]
        .clear

    %header.universal
      .placeholder
        .wrap
          .row12Left
        .clear

    %main.universal
      .placeholder
        .wrap
          .row12Left
            = yield
            - if current_administrator
              = current_administrator.email
              = link_to "Log out", adminboard_logout_path
        .clear

    %footer.universal
      .placeholder
        .wrap
          .row12Left
        .clear
