-# app/views/adminboard/administrators/_form.html.haml

= form_for([:adminboard, @administrator]) do |f|
  - if @administrator.errors.any?
    #error_explanation
      %h2 #{pluralize(@administrator.errors.count, "error")} prohibited this administrator from being saved:
      %ul
        - @administrator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: :off
  .actions
    = f.submit "Save"
